extends layout

block page_name
  = _("Error")

block content
  div.msg-container
    div.msg-title
      h2.p=_("Login required")
    div.msg-body
      h3.p=_("This Genie instance is configured to require login.")
        a(href='javascript:history.back()').btn.btn-default=_("Go back")
  div.msg-button
    a(href=Config.BASE_URL + '/user/login').btn.btn-primary=_("Log in")
